{
    "manifest_version":  3,
    "name":  "AirPresenter Fist Scroll",
    "version":  "0.1.0",
    "description":  "Scroll the active tab with vertical fist gestures.",
    "action":  {
                   "default_title":  "AirPresenter Fist Scroll",
                   "default_icon":  {
                                        "16":  "icons/icon16.png",
                                        "32":  "icons/icon32.png",
                                        "48":  "icons/icon48.png",
                                        "128":  "icons/icon128.png"
                                    }
               },
    "content_security_policy":  {
                                    "extension_pages":  "script-src \u0027self\u0027 \u0027wasm-unsafe-eval\u0027; object-src \u0027self\u0027"
                                },
    "permissions":  [
                        "tabs",
                        "activeTab",
                        "scripting"
                    ],
    "host_permissions":  [
                             "\u003call_urls\u003e"
                         ],
    "content_scripts":  [
                            {
                                "matches":  [
                                                "\u003call_urls\u003e"
                                            ],
                                "js":  [
                                           "content.js"
                                       ],
                                "run_at":  "document_idle"
                            }
                        ],
    "icons":  {
                  "16":  "icons/icon16.png",
                  "32":  "icons/icon32.png",
                  "48":  "icons/icon48.png",
                  "128":  "icons/icon128.png"
              },
    "background":  {
                       "service_worker":  "background.js"
                   }
}